@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "List Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
            <h5 class="card-title">Role Name: @role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-controller="Role" class="btn btn-primary" asp-route-roleId="@role.Id">Edit</a>
                <a href="" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Create a role with the button below
            </h5>
            <a class="btn btn-primary" style="width: auto" asp-controller="Role" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}
